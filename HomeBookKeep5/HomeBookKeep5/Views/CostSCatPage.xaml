<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeBookKeep5.Views.CostSCatPage"
             Title="Расходная часть">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ваша новая ПОДкатегория расходов:" />
            <Entry Text="{Binding Name}" />
            <StackLayout Orientation="Horizontal">
                <Button Text="Сохранить" Clicked="SaveCostSCat" />
                <Button Text="Удалить" Clicked="DeleteCostSCat" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>