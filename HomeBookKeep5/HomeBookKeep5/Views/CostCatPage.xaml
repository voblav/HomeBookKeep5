<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeBookKeep5.Views.CostCatPage"
             Title="Расходная часть">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ваша новая категория расходов:" />
            <Entry Text="{Binding Name}" />
            <StackLayout Orientation="Horizontal">
                <Button Text="Сохранить" Clicked="SaveCostCat" />
                <Button Text="Удалить" Clicked="DeleteCostCat" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>