<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeBookKeep5.Views.CostSubCatsAll"
             Title="Категории расходов">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Добавить" Clicked="CreateSubCostCat" />
            <ListView x:Name="costSubCatList" ItemSelected="OnItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout Orientation="Horizontal">
                                    <Label Text="{Binding Name}" FontSize="Medium" />
                                    <Label Text="{Binding CostCatId}" FontSize="Medium" />
                                    <Label Text="{Binding CostCat.Name}" FontSize="Medium" />
                                </StackLayout>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>